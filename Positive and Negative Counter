#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    int n,count1=0,count2=0;
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        if(a[i]>0)
{
            count1=count1+1;
        }
   else if(a[i]<0)
   {
       count2=count2+1;
   }
}
    cout<<count1<<" "<<count2;
    return 0;
}
